{
  "name": "swing-dance-seattle",
  "version": "4.0.0",
  "description": "Swing and Blues schedule in Seattle",
  "main": "lib/bundle.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm run dev:server\" \"npm run dev:client\" \"firebase serve\"",
    "clean:server": "rimraf lib",
    "clean:client": "rimraf public",
    "dev:server": "npm run clean:server && webpack --watch --config webpack-server.config.js --env=development",
    "dev:client": "npm run clean:client && webpack --watch --config webpack-client.config.js --env=development",
    "build:server:qa": "npm run clean:server && webpack --config webpack-server.config.js --env=qa",
    "build:server:prod": "npm run clean:server && webpack --config webpack-server.config.js --env=production",
    "build:client:qa": "npm run clean:client && webpack --config webpack-client.config.js --env=qa",
    "build:client:prod": "npm run clean:client && webpack --config webpack-client.config.js --env=production",
    "deploy:qa": "npm run build:server:qa && npm run build:client:qa && firebase use qa && firebase deploy",
    "deploy:prod": "npm run build:server:prod && npm run build:client:prod && firebase use production && firebase deploy",
    "seed:qa": "firebase use qa && firebase database:set / seed.json",
    "lint": "eslint ./",
    "precommit": "npm run lint"
  },
  "author": "Stefan Huynh",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.0.0",
    "cssnano": "^4.1.7",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "firebase-tools": "^6.1.2",
    "husky": "^1.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.5.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.1.5",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.10",
    "@fortawesome/free-solid-svg-icons": "^5.6.1",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "classnames": "^2.2.6",
    "debounce": "^1.2.0",
    "detect-node": "^2.0.4",
    "firebase": "^5.7.0",
    "firebase-admin": "^6.4.0",
    "firebase-functions": "^2.1.0",
    "prop-types": "^15.6.2",
    "react": "16.7.0-alpha.2",
    "react-dom": "16.7.0-alpha.2",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "reset-css": "^4.0.1"
  }
}
